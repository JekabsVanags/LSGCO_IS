.h-screen.border-r-4.w-1/5.p-2.flex.flex-col.justify-between
  = image_tag  "LSGCO_logo.png" 

  -if @sidebar_state == "login"
    =form_tag session_path do
      .flex.flex-col
        label.input-label
          |Lietotājs
        input.input-field-blue type="text" name="username"
        label.input-label
          |Parole
        input.input-field-blue type="password" name="password"
        button.btn-primary.flex.items-center.justify-between.my-3 type="submit" 
          |Pievienoties
          =image_tag 'icons/login.svg', size:"30"
  -else
  .flex.flex-col.divide-y-2.divide-scout-gold 
    -if @sidebar_state == "pklv_vaditajs"
        div
          =link_to new_user_path, class: current_page?(controller: 'users', action: 'new') ? "btn-active flex items-center justify-between my-3" : "btn-primary flex items-center justify-between my-3"
            |Pievienot biedru
            =image_tag 'icons/new_user.svg', size:"30"
    -if @sidebar_state == "pklv_biedrs" || @sidebar_state == "pklv_vaditajs"
      div
        =link_to aptaujas_lapa_path, class: controller_name == 'personal_information' ? "btn-active flex items-center justify-between my-3" : "btn-primary flex items-center justify-between my-3"
          |Aptaujas lapa 
          =image_tag 'icons/private_information.svg', size:"30"
        =link_to profils_path, class: current_page?(controller: 'users', action: 'profile') ? "btn-active flex items-center justify-between my-3" : "btn-primary flex items-center justify-between my-3"
          |Mans profils
          =image_tag 'icons/current_user.svg', size:"30"
        =link_to session_path, class: "btn-primary flex items-center justify-between my-3"
          |Izrakstīties
          =image_tag 'icons/logout.svg', size:"30"
     
